{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--no-deprecation --max-old-space-size=8000"
    }
  },
  "installCommand": "pnpm install",
  "buildCommand": "pnpm run generate:importmap && pnpm run build"
}
